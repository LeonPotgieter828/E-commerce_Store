@{
    ViewData["Title"] = "Login";
}

<div class="main-container">
    <h1>Login</h1>
        <div class="login-main">
            <form asp-action="Index">
                    <lable>@ViewBag.message</lable>
                    <label id="em">Email</label>
                    <input for="em" name="username" type="text" placeholder="Username" />
                    <label id="ps">Password</label>
                    <input for="ps" name="password" type="Password" placeholder="Password" />
                    <button type="submit">Login</button>
            </form>
            <p>Dont have an account? <a asp-action="Register">Register Here</a></p>
        </div>
</div>


<style>
    .main-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 25px 50px;
        justify-content: center;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }

    h1{
        font-size: 32px;
    }

    .login-main{
        display: flex;
        width: 280px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 18px;
    }


    .login-main input{
        width: 100%;
        margin-bottom: 10px;
    }

    label{
        font-size: 12px;
        margin-bottom: 4px;
        text-align: left;
        width: 100%;
    }

    button{
        width: 100%;
        background-color: dodgerblue;
        font-size: 16px;
        padding: 4px 0;
        border: none;
        color: white;
        margin-top: 10px;
        border: solid 1.5px transparent;
        transition: 1s;
        margin-bottom: 10px;
    }

    button:hover{
        background-color: transparent;
        border: solid dodgerblue 1.5px;
        color: Black;
    }
</style>