@model List<ProductTable>

@{
    ViewData["Title"] = "Home Page";
}

<div class="main-container">
    <h1>Welcome to Store</h1>
    <div class="search-bar">
        <input type="text" placeholder="Search"/>
    </div>
        <div class="products-container">
            @foreach(var item in Model)
            {

                    <a asp-action="Product" asp-route-productID="@item.ProductID">
                        <form class="product" asp-action="Cart" method="post">
                            <input type="hidden" name="productID" value="@item.ProductID" />
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProductImg)"/>
                            <lable>@item.Name</lable>
                            <lable>R @item.Price</lable>
                            <button type="submit">Add to Cart</button>
                        </form>
                     </a>         
                
            }
        </div>
</div>

<style>
    a{
        text-decoration: none;
        color: black;
    }

    .main-container{
        display: flex;
        width: 100%;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .products-container{
        display: flex;
        width: 100%;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        column-gap: 15px;
    }

    .product{
        width: 280px;
        display: flex;
        flex-direction: column;
        row-gap: 14px;
        justify-content: center;
        align-items: center;
    }

    .product lable{
        text-align: center;
    }

    .product img{
        width: 80%;
    }

</style>
